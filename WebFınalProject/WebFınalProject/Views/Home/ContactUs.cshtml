
@{
    ViewData["Title"] = "ContactUs";
}
    <style>
        body{
            background-image:linear-gradient(to right, #9c094a,#bd3e76)
        }
        .container{
       background-image:linear-gradient(to right, #9c094a,#bd3e76)     
        } 
        
        .contactInputs{
            padding-top:25px
        }
        
        .contactTexts{
            padding-top:50px       
        }
        .contactAddress{
            padding-top:10px
        }
        .button{
             padding-top:25px     
        }
        
    </style>
    
   <div class="container">
       <div class="row">
           <div class="text-center text-white p-2">
            <h1>
                Contact Us
           </h1>
           </div>
       </div>
       <div class="row ">
            <div class="col-md-6">
                <div class="row">
                  <div class="col-md-3">
                         <p class="text-white">Name</p>
                         <input type="text" class="form-control" placeholder="Your Name"/>
                  </div>
                  <div class="col-md-3">
                    <p class="text-white">Surname</p>
                   <input type="text" class="form-control" placeholder="Your Surname"/>
                  </div>
                </div>
                <div class="col-md-6">
                   <p class="text-white contactInputs">E-Mail</p>
                   <input type="email" class="form-control" placeholder="example@gmail.com"/>
               </div>
               <div class="col-md-6">
                   <p class="text-white contactInputs">Massage</p>
                  <textarea class="form-control" placeholder="Your Massage"></textarea>
               </div>
               <div class="button">
                   <form action="/Home/">
                          <button type="submit" class="btn btn-danger">Send</button>
                   </form> 
               </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3  p-2">
                        <img class="w-75" src="../../Images/call.png"/>                       
                    </div>
                    <div class="col-md-3">
                        <p class="contactTexts text-white">0216 448 28 33</p>                     
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 p-2">
                        <img class="w-75" src="../../Images/mail.png"/>                       
                    </div>
                    <div class="col-md-3">
                        <p class="contactTexts text-white">support@arcadian.com</p>                     
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3  p-2">
                        <img class="w-75" src="../../Images/location.png"/>                       
                    </div>
                    <div class="col-md-3">
                        <address class="text-white contactAddress">
                                    Merdivenköy Mah. 
                                    Yumurtacı Abdi Bey Cd
                                    Kadıköy/İstanbul
                        </address>                       
                    </div>
                </div>
            </div>
       </div>
   </div>

